{
  "name": "vscode-epilog",
  "displayName": "Epilog Language Tools",
  "description": "Tools for writing and working with Epilog programs.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:epilog"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "epilog",
        "extensions": [
          ".epilog"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "epilog.graph",
        "displayName": "Epilog Graph",
        "selector": [
          {
            "filenamePattern": "*.epilog"
          }
        ],
        "priority": "option"
      }
    ],
    "grammars": [
      {
        "language": "epilog",
        "scopeName": "source.epilog",
        "path": "./syntax/epilog.tmGrammar.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "prepare": "ts-patch install -s",
    "build-tree-sitter": "tree-sitter build-wasm node_modules/tree-sitter-epilog && mv tree-sitter-epilog.wasm resources",
    "compile": "tsc --build ./util ./client ./server",
    "watch": "tsc --build --watch ./util ./client ./server",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint ./client/src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "tree-sitter-epilog": "file:../../tree-sitter-epilog",
    "ts-patch": "^2.0.2",
    "typescript": "^4.7.4",
    "typescript-transform-paths": "^3.3.1"
  },
  "dependencies": {
    "web-tree-sitter": "^0.20.5"
  }
}
